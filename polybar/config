;==========================================================
;======================== COLORS
;==========================================================
[colors]
; background = ${xrdb:background}
background = #00000000
foreground = ${xrdb:foreground}

; Text
primary = ${xrdb:color15}
; Focused text light
secondary = ${xrdb:color5}
; Dark secondary
tertiary = ${xrdb:color2}
; Urgent text
urgency = ${xrdb:color3}

;==========================================================
;======================== BASE BARS
;==========================================================
[bar/top]
fixed-center = true

width = 100%
padding-left = 2
padding-right = 2
module-margin = 1

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "FuraCode Nerd Font:size=12;8"
font-1 = "FuraCode Nerd Font:style=Bold:size=12;8"

line-size = 2

modules-left = arch-icon
modules-right = pulseaudio battery date

locale = en_US.UTF-8

[bar/bottom]
bottom = true
fixed-center = true

width = 100%
height = 22
padding-left = 2
padding-right = 2
module-margin = 1

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

background = ${colors.background}
foreground = ${colors.foreground}

tray-position = left
tray-maxsize = 16

font-0 = "FuraCode Nerd Font:size=12;3"
font-1 = "FuraCode Nerd Font:style=Bold:size=12;3"

line-size = 2

modules-left = i3
modules-center = spotify mpd 
modules-right = cpu memory network-wifi network-ethernet powermenu

locale = en_US.UTF-8

;==========================================================
;================== TOP LEFT MODULES
;==========================================================
[module/arch-icon]
type = custom/script
exec = uname -r | cut -d- -f1
interval = 999999999

format = <label>
format-padding = 1
format-foreground = ${colors.primary}
format-overline = ${colors.primary}

format-prefix = " "
format-prefix-foreground = ${colors.tertiary}

label = %output%
label-font = 1

